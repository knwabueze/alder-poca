{
  "rules": {
    "notes": {
      "$uid": {
        "$key1": {
          ".validate": "newData.hasChildren(['title']) && newData.child('title').val().length <= 2000",
          "title": {
            ".validate": "newData.isString()"
          },
          "description": {
            ".validate": "newData.isString()"
          },
          "$other": {
            ".validate": "false"
          }
        },
        ".validate": "newData.hasChildren()",
        ".read": "auth != null && auth.uid == $uid || root.child('admins').child(auth.uid).val() != null",
        ".write": "auth != null && auth.uid == $uid || newData.parent().parent().child('admins').child(auth.uid).val() != null",
        ".indexOn": [
          "title"
        ]
      }
    }
  }
}
